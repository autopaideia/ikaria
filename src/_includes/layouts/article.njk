---
layout: layouts/base.njk
---

<article class="Article">
  {% if hero %}
  <img src="{{ hero }}" alt="{{ title }}" class="Article-hero" />
  {% else %}
  <header class="Article-header">
    <div class="Article-details">
      <h1 class="Article-title">{{ title }}</h1>

      {% if subhed %}
      <h2 class="Article-subhed">{{ subhed }}</h2>
      {% endif %}
      <hr class="Article-divider" />

      <div class="Article-byline">
        {% if author %}
        <span class="Article-metadataItem Article-metadataItem--author">
          By {{ author }}
        </span>
        {% endif %} {% if author and published %}&middot;{% endif %} {% if
        published %}
        <span class="Article-metadataItem Article-metadataItem--published">
          {{ published }}
        </span>
        {% endif %}
      </div>

      <ul class="Article-tags">
        {%- for tag in tags | filterTagList %} {%- set tagUrl %}/tags/{{
          tag | slugify
        }}/{% endset %}
        <li class="Article-tagItem">
          <a href="{{ tagUrl | url }}" class="Article-tag">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              height="1em"
              viewBox="0 0 512 512"
            >
              <path
                d="M345 39.1L472.8 168.4c52.4 53 52.4 138.2 0 191.2L360.8 472.9c-9.3 9.4-24.5 9.5-33.9 .2s-9.5-24.5-.2-33.9L438.6 325.9c33.9-34.3 33.9-89.4 0-123.7L310.9 72.9c-9.3-9.4-9.2-24.6 .2-33.9s24.6-9.2 33.9 .2zM0 229.5V80C0 53.5 21.5 32 48 32H197.5c17 0 33.3 6.7 45.3 18.7l168 168c25 25 25 65.5 0 90.5L277.3 442.7c-25 25-65.5 25-90.5 0l-168-168C6.7 262.7 0 246.5 0 229.5zM144 144a32 32 0 1 0 -64 0 32 32 0 1 0 64 0z"
              />
            </svg>
            {{ tag }}</a
          >
        </li>
        {%- endfor %}
      </ul>
    </div>
  </header>
  {% endif %}

  <div class="Article-content">
    {{ content | safe }}
  </div>
</article>
