<header class="SiteHeader">
  <div class="SiteHeader-inner">
    <a href="/" class="SiteHeader-title cutout">
      {{ 'The Icarus Project' | spanify | safe }}
      <br />
      <span>Archive</span>
    </a>

    <button
      id="menu-button"
      class="SiteHeader-menuButton"
      aria-expanded="false"
      aria-label="Toggle Navigation Menu"
      aria-controls="menu"
    >
      {{ '   ' | spanify | safe }}
    </button>
  </div>

  <nav class="SiteHeader-nav" aria-labelledby="menu-button">
    {% include 'partials/nav-menu.njk' %}
  </nav>

  <div id="nav-graph-target" class="SiteHeader-navGraph"></div>
</header>
